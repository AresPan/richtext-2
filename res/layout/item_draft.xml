<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_white"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/tv_common_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="6月27日    10:00"
                android:textColor="@color/font_gray"
                android:textSize="11sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_common_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:maxLines="1"
            android:text="更具新意的拍拍拍，联想Vibe Shot 体验 "
            android:textColor="@color/pitch_black"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/ll_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_image1"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/def_bg_headinmage" />

            <ImageView
                android:id="@+id/iv_image2"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/def_bg_headinmage" />

            <ImageView
                android:id="@+id/iv_image3"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/def_bg_headinmage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:layout_marginBottom="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_common_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"            
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="虽然照相这个在手机上已经被用了几千百次了，所以每次有新手机发布一旦提起拍照上的新突破，发布一"
                android:textColor="@color/center_black"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
        
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自  "
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:textColor="@color/font_gray"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/from"
                android:text="摄影爱好者"
                 android:layout_centerVertical="true"
                android:textColor="@color/accent_blue"
                android:textSize="11sp" />
			
            <TextView
                android:id="@+id/tv_message_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="删除"
                 android:layout_centerVertical="true"
                android:textColor="@color/point_red"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv_message_num"
                 android:layout_centerVertical="true"
                android:src="@drawable/topic_icon_del" />
            <!-- 点击热区 -->
            <View 
			    android:layout_width="60dp"
			    android:layout_height="20dp"
			    android:layout_alignParentRight="true"
			    android:id="@+id/zone_click"
			    />
		
           
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background_gray" />

</LinearLayout>